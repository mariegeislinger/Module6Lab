@page
@model IndexModel
@{
    ViewData["Title"] = "Teen Hangout";
}

<div class="container mt-4">
    <h1 class="text-center text-primary">Teen Hangout</h1>
    <p class="text-center">Your virtual space to connect!</p>

    <div class="card my-4">
        <div class="card-body">
            <h2>Our Members</h2>
            @for (int i = 0; i < Model.Users.Length; i++)
            {
                <div class="alert alert-secondary">
                    <strong>@Model.Users[i].Username</strong> - 
                    Age: @Model.Users[i].Age - 
                    Favorite Color: @Model.Users[i].FavoriteColor
                </div>
            }
        </div>
    </div>

    <div class="card my-4">
        <div class="card-body">
            <h2>Recent Posts</h2>
            @for (int i = 0; i < Model.Posts.Length; i++)
            {
                <div class="alert alert-info">
                    <strong>@Model.Posts[i].Username</strong>
                    <p>@Model.Posts[i].Content</p>
                    <small>Likes: @Model.Posts[i].Likes</small>
                </div>
            }
        </div>
    </div>

    <div class="card my-4">
        <div class="card-body">
            <h2>Popular Posts (20+ Likes)</h2>
            @for (int i = 0; i < Model.Posts.Length; i++)
            {
                @if (Model.Posts[i].Likes >= 20)
                {
                    <div class="alert alert-success">
                        <strong>@Model.Posts[i].Username</strong>
                        <p>@Model.Posts[i].Content</p>
                        <strong>Likes: @Model.Posts[i].Likes</strong>
                    </div>
                }
            }
        </div>
    </div>
</div>